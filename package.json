{
  "name": "vaultifychain",
  "version": "1.0.0",
  "description": "Secure file storage meets verifiable proof on blockchain",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "preview:prod": "vite preview --port 4173",
    "deploy": "npm run build:prod && npm run deploy:upload",
    "deploy:upload": "echo 'Deploy to your hosting service'",
    "test": "echo 'No tests specified'",
    "lint": "echo 'No linter configured'",
    "type-check": "echo 'No type checker configured'",
    "compile": "hardhat compile",
    "deploy:blockdag": "hardhat run scripts/deploy.js --network blockdagTestnet",
    "deploy:blockdag-mainnet": "hardhat run scripts/deploy.js --network blockdagMainnet",
    "verify:blockdag": "hardhat verify --network blockdagTestnet",
    "test:contracts": "hardhat test",
    "test:deployment": "hardhat run scripts/test-deployment.js --network blockdagTestnet"
  },
  "dependencies": {
    "@types/crypto-js": "^4.1.1",
    "crypto-js": "^4.1.1",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "chai": "^4.5.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "postcss": "^8.4.24",
    "solidity-coverage": "^0.8.16",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "vite": "^4.4.5"
  }
